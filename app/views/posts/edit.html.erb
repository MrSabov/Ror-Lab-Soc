<h1>New post</h1>

<%= form_for @post, url: post_path, validate: true do |f|%>

    <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>

<p><%= f.label :title %></p>
<%= f.text_field :title, class: 'form-control' %><br/>

<p><%= f.label :summary %></p>
<%= f.text_area :summary, class: 'form-control' %>

<p><%= f.label :body %></p>
<%= f.trix_editor :body, class: 'form-control' %>

<div class="form-group">
  <%= f.label :all_tags %>
  <%= f.text_field :all_tags, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true }, class: 'form-control' %>
</div>


<div class="form-group">
  <%= f.file_field :image %>
</div>

<p><%= f.submit "Edit" %></p>


<% end %>