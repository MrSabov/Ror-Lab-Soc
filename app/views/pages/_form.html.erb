<%= form_for @page, html: { multiparth: true } do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :surname %>
      <%= f.text_field :surname, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :nikname %>
      <%= f.text_field :nikname, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :age %>
      <%= f.text_field :age, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.file_field :avatar %>
    </div>


    <div class="form-group">
      <%= f.submit 'save', class: 'btn btn-primary' %>
    </div>

<% end %>