
 <style>

   .card {
     margin: 8px 0 8px 0;
   }

   img.img-as {
     width: 50px;
     height: 50px;
     border: 2px;
     border-radius: 10px;
   }
     .img-as {
       float: left;
       padding: 5px 6px 3px 5px;
     }

       .img-as > p {
         padding-top: 10px;
       }




 </style>


<h2> Всі користувачі </h2>

<% @pages.each do |page| %>
    <div class="card">
      <div class="img-as">
        <%= image_tag page.avatar.url(:large), class: 'img-as' if page.avatar? %>
        <p><%= page.name %>  <%= page.surname %> | <%= link_to page.nikname, page_path(page) %></p>
      </div>
    </div>
<% end %>